<form class="signup-form">
  <h4>Create An Account</h4>
  <div>
    <label for="username-signup"></label>
    <input type="text" id="username-signup" placeholder="Username"/>
  </div>
  <div>
    <label for="email-signup"></label>
    <input type="text" id="email-signup" placeholder="Email"/>
  </div>
  <div>
    <label for="password-signup"></label>
    <input type="password" id="password-signup" placeholder="Password"/>
  </div>
  <div>
    <button type="submit">Sign up</button>
  </div>
  <a href="/login">Log in instead?</a>
</form>



<script src="/js/signup.js"></script>